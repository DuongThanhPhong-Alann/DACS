@model QLCCCC.Models.ChuHo

@{
    ViewData["Title"] = "Chỉnh Sửa Chủ Hộ";
}

<div class="container mt-5">
    <div class="form-wrapper p-4 rounded shadow-sm mx-auto" style="max-width: 800px; background: linear-gradient(to right, #ffffff, #fef9f2);">
        <h2 class="text-center mb-4" style="color: #d35400;">Chỉnh Sửa Chủ Hộ</h2>

        <form asp-action="Edit" method="post" class="row g-3">
            <input type="hidden" asp-for="ID" />

            <div class="col-md-6">
                <label asp-for="ID_CuDan" class="form-label fw-bold">Mã Cư Dân</label>
                <input asp-for="ID_CuDan" class="form-control rounded-pill" readonly />
            </div>

            <div class="col-md-6">
                <label asp-for="ID_CanHo" class="form-label fw-bold">Mã Căn Hộ</label>
                <input asp-for="ID_CanHo" class="form-control rounded-pill" />
            </div>

            <div class="col-md-6">
                <label asp-for="ID_ChungCu" class="form-label fw-bold">Mã Chung Cư</label>
                <input asp-for="ID_ChungCu" class="form-control rounded-pill" />
            </div>

            <div class="col-md-6">
                <label asp-for="NgayBatDau" class="form-label fw-bold">Ngày Bắt Đầu</label>
                <input asp-for="NgayBatDau" type="date" class="form-control rounded-pill" />
            </div>

            <div class="col-md-12">
                <label asp-for="GhiChu" class="form-label fw-bold">Ghi Chú</label>
                <textarea asp-for="GhiChu" class="form-control rounded" rows="3"></textarea>
            </div>

            <div class="col-12 text-center mt-4">
                <button type="submit" class="btn btn-warning px-4 py-2 rounded-pill fw-bold" style="background: linear-gradient(135deg, #ffc107, #e0a800);">
                    <i class="bi bi-save"></i> Lưu
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4 py-2 rounded-pill fw-bold ms-2">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>
