@model QLCCCC.Models.PhanAnh

<h1>Tạo phản ánh mới</h1>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="NoiDung" class="control-label"></label>
        <textarea asp-for="NoiDung" class="form-control"></textarea>
        <span asp-validation-for="NoiDung" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="HinhAnhFile">Tải ảnh lên (nếu có):</label>
        <input type="file" name="HinhAnhFile" class="form-control" />
    </div>

    <div class="form-group">
        <label for="HinhAnhLink">Hoặc nhập URL ảnh:</label>
        <input type="text" name="HinhAnhLink" class="form-control" placeholder="https://example.com/image.jpg" />
    </div>

    <div class="form-group mt-2">
        <input type="submit" value="Tạo" class="btn btn-primary" />
    </div>
    @Html.AntiForgeryToken()
</form>
