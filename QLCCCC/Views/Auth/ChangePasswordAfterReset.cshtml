@{
    ViewBag.Title = "Đổi mật khẩu sau khi reset";
}

<div class="container">
    <h2 class="text-center">Đổi mật khẩu sau khi reset</h2>

    <form method="post" class="reset-password-form">
        <input type="hidden" name="email" value="@ViewBag.Email" />

        <div class="form-group">
            <label for="tempPassword">Mật khẩu tạm thời đã gửi:</label>
            <input name="tempPassword" type="password" class="form-control" id="tempPassword" required placeholder="Nhập mật khẩu tạm thời" />
        </div>

        <div class="form-group">
            <label for="newPassword">Mật khẩu mới:</label>
            <input name="newPassword" type="password" class="form-control" id="newPassword" required placeholder="Nhập mật khẩu mới" />
        </div>

        <div class="form-group">
            <label for="confirmPassword">Nhập lại mật khẩu mới:</label>
            <input name="confirmPassword" type="password" class="form-control" id="confirmPassword" required placeholder="Nhập lại mật khẩu mới" />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Đổi mật khẩu</button>
        </div>
    </form>
</div>

<!-- Styles for better appearance -->
<style>
    .container {
        max-width: 100%;
        width: 500px; /* Set a maximum width */
        margin: 50px auto;
        padding: 30px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .h2 {
        margin-bottom: 30px;
        color: #333;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: bold;
            margin-bottom: 8px;
            display: block;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
        box-sizing: border-box;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.5);
        }

    .btn {
        padding: 10px 20px;
        font-size: 16px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn:hover {
            background-color: #0056b3;
        }

    .text-center {
        text-align: center;
    }
</style>
