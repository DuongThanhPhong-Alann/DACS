@model QLCCCC.Models.NguoiDung

@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<style>
    .profile-container {
        max-width: 500px;
        margin: 30px auto;
        padding: 25px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    h2 {
        color: #d35400;
        font-size: 1.8rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 25px;
    }

    .form-group {
        position: relative;
    }

        .form-group input {
            padding-right: 40px; /* Space for the eye icon */
        }

        .form-group .eye-icon {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
        }

            .form-group .eye-icon:hover {
                color: #d35400;
            }

    .btn-primary {
        background-color: #d35400;
        border-color: #d35400;
    }

        .btn-primary:hover {
            background-color: #e67e22;
            border-color: #e67e22;
        }
</style>

<div class="profile-container">
    <h2>Đổi mật khẩu</h2>

    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success">@ViewBag.SuccessMessage</div>
    }

    <form asp-action="ChangePassword" method="post">
        <div class="form-group">
            <label>Mật khẩu hiện tại</label>
            <input name="CurrentPassword" id="CurrentPassword" type="password" class="form-control" required />
            <span class="text-danger">@ViewBag.PasswordError</span>
            <i class="fas fa-eye eye-icon" id="toggleCurrentPassword" onclick="togglePassword('CurrentPassword')"></i>
        </div>

        <div class="form-group">
            <label>Mật khẩu mới</label>
            <input name="NewPassword" id="NewPassword" type="password" class="form-control" required />
            <i class="fas fa-eye eye-icon" id="toggleNewPassword" onclick="togglePassword('NewPassword')"></i>
        </div>

        <div class="form-group">
            <label>Xác nhận mật khẩu mới</label>
            <input name="ConfirmPassword" id="ConfirmPassword" type="password" class="form-control" required />
            <i class="fas fa-eye eye-icon" id="toggleConfirmPassword" onclick="togglePassword('ConfirmPassword')"></i>
            <span class="text-danger">@ViewBag.ConfirmError</span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Đổi mật khẩu</button>
    </form>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>

    <script>
        function togglePassword(passwordFieldId) {
            const passwordField = document.getElementById(passwordFieldId);
            const currentType = passwordField.type;
            passwordField.type = currentType === 'password' ? 'text' : 'password';
        }
    </script>
}
